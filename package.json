{
  "name": "writers-toolkit-electron",
  "version": "1.0.0",
  "productName": "Writer's Toolkit",
  "description": "Writer's Toolkit app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder build --mac --win --publish never",
    "build:mac": "electron-builder build --mac --publish never",
    "build:win": "electron-builder build --win --publish never"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourname.writerstoolkit",
    "productName": "Writer's Toolkit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!dist",
      "!build",
      "!releases",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "electron-store": "^10.0.1",
    "uuid": "^11.1.0"
  }
}
